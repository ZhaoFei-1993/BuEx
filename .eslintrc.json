{
  "extends": "standard",
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["html", "standard"],
  "rules": {
    "indent": ["off", 4, { "SwitchCase": 1 }],
    "quotes": ["off", "single"],
    "semi": ["off", "always"],
    "no-console": ["off"],
    "no-empty": 0,
    "no-eq-null": 0,
    "no-new": 0,
    "no-fallthrough": 0,
    "no-unreachable": 0,
    "spaced-comment": ["off"]
  }
}
